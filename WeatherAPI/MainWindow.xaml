<Window x:Class="WeatherAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAPI"
        mc:Ignorable="d" FontSize="22" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <StackPanel>
            <TextBlock x:Name="weatherType" Margin="10" FontWeight="Normal" FontSize="18"></TextBlock>
            <TextBlock x:Name="weather" Margin="20" FontWeight="ExtraBold"></TextBlock>
            <TextBlock x:Name="weatherFeels" Margin="20" FontWeight="Light" FontSize="16"></TextBlock>
            <TextBlock x:Name="weatherMin" Margin="0" FontWeight="Medium" FontSize="17"></TextBlock>
            <TextBlock x:Name="weatherMax" Margin="0" FontWeight="Medium" FontSize="17"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
