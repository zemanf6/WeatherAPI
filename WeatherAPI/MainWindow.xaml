<Window x:Class="WeatherAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAPI"
        mc:Ignorable="d" FontSize="22" Loaded="Window_Loaded" Icon="icon.png"
        Title="Weather" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="wallpaper.jpg"></ImageBrush>
    </Window.Background>
    <Grid>

        <StackPanel>
            <TextBlock x:Name="weather" HorizontalAlignment="Center" Margin="20" Padding="0,20,0,0" FontWeight="ExtraBold"></TextBlock>
            <TextBlock x:Name="weatherFeels" HorizontalAlignment="Center" FontWeight="Light" FontSize="16"></TextBlock>
        </StackPanel>
        <TextBlock x:Name="weatherMin" HorizontalAlignment="Left" Padding="25,150,0,0" FontWeight="Medium" FontSize="17"></TextBlock>
        <TextBlock x:Name="weatherMax" HorizontalAlignment="Right" Padding="0,150,25,0" FontWeight="Medium" FontSize="17"></TextBlock>

        <TextBlock x:Name="city" HorizontalAlignment="Center" Padding="0,250,0,0" FontWeight="DemiBold" FontSize="30"></TextBlock>
    </Grid>
</Window>
